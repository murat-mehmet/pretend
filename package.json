{
  "name": "pretend2",
  "version": "0.0.0-development",
  "description": "A decorator based http webservice client written in typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "linter": "tslint --project ./tsconfig.json",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "tsc --sourceMap",
    "test": "jest",
    "coverage": "codecov",
    "watch:build": "tsc --watch --sourceMap",
    "watch:test": "yarn test -- --watch",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/murat-mehmet/pretend2.git"
  },
  "author": {
    "name": "Markus Wolf",
    "email": "knister.peter@shadowrun-clan.de"
  },
  "license": "MIT",
  "devDependencies": {
    "@knisterpeter/standard-tslint": "1.7.2",
    "@types/jest": "29.5.10",
    "@types/node": "20.10.0",
    "codecov": "3.8.3",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "isomorphic-fetch": "3.0.0",
    "isomorphic-form-data": "2.0.0",
    "jest": "29.7.0",
    "nock": "13.2.9",
    "prettier": "2.8.8",
    "rimraf": "3.0.2",
    "semantic-release": "^21.0.1",
    "ts-jest": "29.1.1",
    "tslint": "6.1.3",
    "typescript": "4.9.5"
  },
  "optionalDependencies": {
    "isomorphic-fetch": "3.0.0",
    "isomorphic-form-data": "2.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "packageRules": [
      {
        "depTypeList": [
          "devDependencies"
        ],
        "updateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      },
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      }
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
